<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Connection Status Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/statusConnection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/disconnected"
                android:textColor="@color/disconnected"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/statusCalibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cal: NONE"
                android:textColor="@color/disconnected"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_mode"
                android:minWidth="80dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect"
                android:minWidth="100dp"/>
        </LinearLayout>

        <!-- State Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STATE"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/statusState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/state_idle"
                    android:textColor="@color/idle"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Heading Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heading"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Current Heading -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/headingCurrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0°"
                            android:textColor="@color/heading"
                            android:textSize="28sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Error -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/error"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/headingError"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0.0°"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <!-- Target Heading -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/target"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/headingTarget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0°"
                            android:textColor="@color/target"
                            android:textSize="28sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Heading Adjustment Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnHeadingMinus10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-10°"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <Button
                        android:id="@+id/btnHeadingMinus1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-1°"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <Button
                        android:id="@+id/btnHeadingPlus1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+1°"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <Button
                        android:id="@+id/btnHeadingPlus10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+10°"
                        style="@style/Widget.Material3.Button.TonalButton"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rudder Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rudder"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/rudderAngle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0.0°"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Rudder Indicator -->
                <FrameLayout
                    android:id="@+id/rudderIndicatorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rudder_background">

                    <!-- Center line -->
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/text_secondary"/>

                    <!-- Rudder position indicator -->
                    <View
                        android:id="@+id/rudderIndicator"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/engaged"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/port"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/stbd"
                        android:textColor="@color/text_secondary"
                        android:textSize="10sp"
                        android:gravity="end"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fault Display (hidden by default) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/faultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/faulted"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/faultText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAULT: NONE"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Control Buttons -->
        <Button
            android:id="@+id/btnEngage"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/engage"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/btnClearFault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_fault"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.TonalButton"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCalibration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/calibrate"
                android:enabled="false"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnParameters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/parameters"
                android:enabled="false"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <Button
                android:id="@+id/btnMagCal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mag Cal"
                android:enabled="false"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
